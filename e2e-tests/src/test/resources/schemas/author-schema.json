{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Author",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "birthDate": { "type": ["string", "null"] },
    "nationality": { "type": ["string", "null"] },
    "books": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "isbn": { "type": "string" },
          "publicationDate": { "type": "string", "format": "date" }
        },
        "required": ["id", "title", "isbn"]
      },
      "default": []
    }
  },
  "required": ["id", "name"]
}
